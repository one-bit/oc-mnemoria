{
  "name": "oc-mnemoria",
  "version": "0.1.0",
  "description": "Persistent shared memory (hive mind) for OpenCode agents, powered by the mnemoria Rust engine",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./plugin": {
      "types": "./dist/plugin.d.ts",
      "import": "./dist/plugin.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "check": "npm run typecheck && npm run lint && npm run test",
    "audit:security": "npm audit --omit=dev",
    "audit:licenses": "npx license-checker --production --failOn 'GPL-2.0;GPL-3.0;AGPL-1.0;AGPL-3.0;SSPL-1.0;EUPL-1.1;EUPL-1.2'",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist",
    "commands",
    "install.sh"
  ],
  "keywords": [
    "opencode",
    "opencode-plugin",
    "opencode-ai",
    "memory",
    "ai-memory",
    "mnemoria",
    "persistent-memory",
    "agent-memory",
    "hive-mind",
    "llm-memory",
    "ai-assistant",
    "ai-agent",
    "context-persistence",
    "semantic-search"
  ],
  "author": "one-bit (https://github.com/one-bit)",
  "license": "MIT",
  "homepage": "https://github.com/one-bit/oc-mnemoria#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/one-bit/oc-mnemoria.git"
  },
  "bugs": {
    "url": "https://github.com/one-bit/oc-mnemoria/issues"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@opencode-ai/plugin": "latest",
    "@types/node": "^22.0.0",
    "eslint": "^9.39.2",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.55.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
