{
  "name": "oc-mnemoria",
  "version": "0.1.0",
  "private": true,
  "description": "Persistent per-agent memory for OpenCode, powered by mnemoria",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "check": "npm run typecheck && npm run lint",
    "audit:security": "npm audit --omit=dev",
    "audit:licenses": "npx license-checker --production --failOn 'GPL-2.0;GPL-3.0;AGPL-1.0;AGPL-3.0;SSPL-1.0;EUPL-1.1;EUPL-1.2'",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist",
    "commands"
  ],
  "keywords": [
    "opencode",
    "opencode-plugin",
    "memory",
    "ai-memory",
    "mnemoria",
    "persistent-memory",
    "per-agent-memory",
    "llm-memory",
    "ai-assistant"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/one-bit/oc-mnemoria.git"
  },
  "bugs": {
    "url": "https://github.com/one-bit/oc-mnemoria/issues"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@opencode-ai/plugin": "latest",
    "@types/node": "^22.0.0",
    "eslint": "^9.39.2",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.55.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
